@{
    ViewData["Title"] = "Movies";
}

@model MovieListViewModel
    <div page-model="@Model.PagingInfo"
         page-action="Movies"
         page-classes-enabled="true"
         page-class=""
         page-class-normal="nav-link"
         page-class-selected="nav-link active border-secondary"
         div-class="card-header"
         list-class="nav nav-tabs card-header-tabs text-light"
         list-item-class="nav-item"         
         class="card-header">
    </div>

    <div class="container mb-xl-5">
        <table class="table table-hover text-light">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Year</th>
                    <th scope="col">Director</th>
                    <th scope="col">Lent To</th>
                    <th scope="col">Edited</th>
                    <th scope="col">Notes</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model.Movies)
                {
                    <partial name="MovieSummary" model="movie" />
                }
            </tbody>
        </table>
    </div>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/CustomStyles.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top frosted">
            <a class="navbar-brand display-4 ml-4" asp-controller="Home" asp-action="Index">J. Hilton Movies</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="@((string)ViewData["Title"] == "Home" ? "nav-item nav-link ml-4 active" : "nav-item nav-link ml-4")" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    <a class="@((string)ViewData["Title"] == "Movies" ? "nav-item nav-link ml-4 active" : "nav-item nav-link ml-4")" asp-controller="Home" asp-action="Movies">Movies</a>
                    <a class="@((string)ViewData["Title"] == "Podcast" ? "nav-item nav-link ml-4 active" : "nav-item nav-link ml-4")" asp-controller="Home" asp-action="Podcasts">Podcasts</a>
                    <a class="@((string)ViewData["Title"] == "Add Movie" ? "nav-item nav-link ml-4 active" : "nav-item nav-link ml-4")" asp-controller="Home" asp-action="AddMovie">Add Movie</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="my-extra">
        @RenderBody()
    </div>

    <footer class="footer mt-auto frosted">
        <div class="container">
            <span class="text-muted">&copy;2021 Tate Wilks</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

@{
}

@model Movie

<tr>
    <td scope="col">@Model.MovieID</td>
    <td scope="col">@Model.MovieTitle</td>
    <td scope="col">@Model.Category</td>
    <td scope="col">@Model.Rating</td>
    <td scope="col">@Model.YearReleased</td>
    <td scope="col">@Model.Director</td>
    <td scope="col">@Model.LentTo</td>
    <td scope="col">
    @if (Model.Edited)
    {
        @:Yes 
    }
    else 
    { 
        @:No 
    }
    </td>
    <td scope="col">@Model.Notes</td>
    <td scope="col">
        <form method="post" asp-action="EditMovie">
            <input hidden value="@Model.MovieID" name="movieId" readonly />
            <input type="submit" class="btn btn-outline-warning" value="Edit" />
        </form>
    </td>
    <td scope="col">
        <form method="post" asp-action="DeleteMovie">
            <input hidden value="@Model.MovieID" name="movidId" readonly />
            <input type="submit" class="btn btn-outline-danger" value="Delete" />
        </form>
    </td>
</tr>